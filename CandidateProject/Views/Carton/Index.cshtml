@model IEnumerable<CandidateProject.ViewModels.CartonViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

    @if (TempData["content"] != null)
    {
        <p><b style="color:green;">Contains @TempData["content"] equipment(s)</b></p>
    }

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CartonNumber)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CartonNumber)

            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                @Html.ActionLink("AddEquipment", "AddEquipment", new { id = item.Id }) |
                @Html.ActionLink("ViewCartonEquipment", "ViewCartonEquipment", new { id = item.Id })
            </td>
        </tr>
    }

</table>
